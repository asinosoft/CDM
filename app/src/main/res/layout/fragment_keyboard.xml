<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:contextClickable="true"
    tools:context=".fragments.KeyboardFragment">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textCursorDrawable="@null"
            android:textSize="36sp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="16dp"
            android:contentDescription="@string/close_keyboard"
            android:src="?attr/closeIcon"
            app:tint="?android:attr/colorPrimary" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        app:layout_constraintTop_toBottomOf="@+id/top">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple1"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/one_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_marginStart="@dimen/passcode_btn_margin"
                    android:layout_marginTop="@dimen/passcode_btn_margin"
                    android:layout_marginEnd="@dimen/passcode_btn_margin"
                    android:layout_marginBottom="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_one"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>

            </com.skyfishjy.library.RippleBackground>

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple2"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/two_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_marginStart="@dimen/passcode_btn_margin"
                    android:layout_marginTop="@dimen/passcode_btn_margin"
                    android:layout_marginEnd="@dimen/passcode_btn_margin"
                    android:layout_marginBottom="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_two"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>

            </com.skyfishjy.library.RippleBackground>

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple3"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/three_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_margin="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_three"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple4"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/four_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_margin="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_four"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple5"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/five_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_margin="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_five"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple6"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/six_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_margin="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_six"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple7"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/seven_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_margin="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_seven"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple8"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/eight_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_margin="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_eight"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple9"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/nine_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_margin="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_nine"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/asterisk"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/star"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_marginStart="@dimen/passcode_btn_margin"
                    android:layout_marginTop="@dimen/passcode_btn_margin"
                    android:layout_marginEnd="@dimen/passcode_btn_margin"
                    android:layout_marginBottom="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_star"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_jail"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="?android:attr/textColorSecondary" />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple0"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/zero_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_marginStart="@dimen/passcode_btn_margin"
                    android:layout_marginTop="@dimen/passcode_btn_margin"
                    android:layout_marginEnd="@dimen/passcode_btn_margin"
                    android:layout_marginBottom="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_zero"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>

            <ImageView
                android:id="@+id/hangup"
                android:layout_width="@dimen/passcode_btn"
                android:layout_height="@dimen/passcode_btn"
                android:layout_marginStart="@dimen/passcode_btn_margin"
                android:layout_marginTop="@dimen/passcode_btn_margin"
                android:layout_marginEnd="@dimen/passcode_btn_margin"
                android:layout_marginBottom="@dimen/passcode_btn_margin"
                android:contentDescription="@string/action_hangup"
                android:hapticFeedbackEnabled="true"
                android:padding="5dp"
                android:src="?attr/hangupIcon"
                tools:src="@drawable/ic_phone_hangup" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>