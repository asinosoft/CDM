<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="65dp"
    android:clickable="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageContact"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="8dp"
            android:src="@drawable/contact_unfoto" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_toEndOf="@id/imageContact"
            android:padding="4dp"
            android:text="name"
            android:textSize="18sp"
            android:textStyle="normal"/>

        <ImageView
            android:id="@+id/typeCall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/name"
            android:layout_toEndOf="@id/imageContact"
            android:src="@drawable/baseline_call_made_24" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@id/name"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/typeCall"
            android:text="number"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/timeContact"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_above="@id/separator"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="13dp"
            android:text="time"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dateContact"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_above="@id/separator"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="36dp"
            android:text="date"
            android:textSize="16sp" />

        <View
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/imageContact"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="16dp"
            android:background="#A2A59C" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageLeftAction"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="8dp"
            android:src="@drawable/telephony_call_192"
            android:visibility="invisible"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageRightAction"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="8dp"
            android:src="@drawable/whatsapp_192"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"/>

</RelativeLayout>