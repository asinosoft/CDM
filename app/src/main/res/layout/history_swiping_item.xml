<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeL"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.zerobranch.layout.SwipeLayout
        android:id="@+id/swipe_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:draggedItem="@id/drag_layout"
        app:leftItem="@id/imageLeftAction"
        app:rightItem="@id/imageRightAction"
        app:swipeDirection="left|right"
        app:isTogether="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageLeftAction"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:layout_marginEnd="-64dp"
            android:padding="8dp"
            android:src="@drawable/telephony_call_192"
            android:visibility="visible" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageRightAction"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="-64dp"
            android:padding="8dp"
            android:src="@drawable/whatsapp_192"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/drag_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageContact"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="8dp"
        android:src="@drawable/contact_unfoto" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_toEndOf="@id/imageContact"
        android:padding="4dp"
        android:text="name"
        android:textSize="18sp"
        android:textStyle="normal"/>

    <ImageView
        android:id="@+id/typeCall"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/name"
        android:layout_toEndOf="@id/imageContact"
        android:src="@drawable/baseline_call_made_24" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_below="@id/name"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/typeCall"
        android:text="number"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/timeContact"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="13dp"
        android:text="time"
        android:layout_above="@id/separator"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dateContact"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="36dp"
        android:text="date"
        android:textSize="16sp" />

        <View
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="16dp"
            android:layout_below="@id/imageContact"
            android:background="#A2A59C" />

        </RelativeLayout>

    </com.zerobranch.layout.SwipeLayout>

</RelativeLayout>