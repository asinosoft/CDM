<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Keyboard">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_clear"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_close_24px" />

        <TextView
            android:id="@+id/input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/image_backspace"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_backspace_24px" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear"
        app:layout_constraintTop_toBottomOf="@+id/linear">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/one_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_margin="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_one"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/costomGray" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="10dp"
                        android:alpha="0.4"
                        android:src="@drawable/ic_voicemail_24px"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

            </com.skyfishjy.library.RippleBackground>

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/two_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_margin="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_two"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/costomGray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/digit_two_text"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

            </com.skyfishjy.library.RippleBackground>

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/three_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_margin="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_three"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/costomGray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/digit_three_text"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/four_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_margin="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_four"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/costomGray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/digit_four_text"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/five_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_margin="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_five"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/costomGray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/digit_five_text"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/six_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_margin="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_six"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/costomGray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/digit_six_text"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/seven_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_margin="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_seven"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/costomGray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/digit_seven_text"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/eight_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_margin="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_eight"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/costomGray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/digit_eight_text"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/nine_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_margin="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_nine"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/costomGray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/digit_nine_text"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/star"
                android:layout_width="@dimen/passcode_btn"
                android:layout_height="@dimen/passcode_btn"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="*"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/costomGray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="#"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/costomGray" />
            </LinearLayout>


            <com.skyfishjy.library.RippleBackground
                android:id="@+id/ripple0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rb_color="#0099CC"
                app:rb_duration="500"
                app:rb_radius="16dp"
                app:rb_rippleAmount="1"
                app:rb_scale="3">

                <LinearLayout
                    android:id="@+id/zero_btn"
                    android:layout_width="@dimen/passcode_btn"
                    android:layout_height="@dimen/passcode_btn"
                    android:layout_margin="@dimen/passcode_btn_margin"
                    android:background="@drawable/numeric_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_zero"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/costomGray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/digit_zero_text"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </com.skyfishjy.library.RippleBackground>

            <ImageView
                android:id="@+id/btnCall"
                android:layout_width="@dimen/passcode_btn"
                android:layout_height="@dimen/passcode_btn"
                android:layout_margin="@dimen/passcode_btn_margin"
                android:background="@android:color/transparent"
                android:hapticFeedbackEnabled="true"
                android:padding="5dp"
                android:src="@drawable/ic_phone_24px"
                android:visibility="visible" />
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/settingsButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:src="@drawable/baseline_settings_black_48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>