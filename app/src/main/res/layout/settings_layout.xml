            app:layout_constraintEnd_toEndOf="parent"
            android:checked="true"
            android:text="Автоматически определять отступы" />

        <com.xw.repo.BubbleSeekBar
            android:layout_marginTop="6dp"
            android:id="@+id/seekBarColumnsButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bsb_auto_adjust_section_mark="true"
            app:bsb_second_track_color="@color/blue"
            app:bsb_touch_to_seek="true"
            app:layout_constraintTop_toBottomOf="@id/checkboxOffsetCirs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="20dp"
            app:bsb_min="1"
            app:bsb_max="4"
            app:bsb_progress="1"
            app:bsb_section_count="3"
            app:bsb_section_text_position="below_section_mark"
            app:bsb_show_section_mark="true"
            app:bsb_show_section_text="true"
            app:bsb_show_thumb_text="true"/>

        <TextView
            android:id="@+id/textViewBorder"
