<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:listViewStyle">@style/TransparentListView</item>
        <item name="android:expandableListViewStyle">@style/TransparentExpandableListView</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="backspaceIcon">@drawable/ic_backspace_24px</item>
        <item name="callIcon">@drawable/ic_phone_24px</item>
        <item name="closeIcon">@drawable/ic_close_24px</item>
        <item name="settingsIcon">@drawable/ic_cog</item>
        <item name="searchIcon">@drawable/ic_keyboard</item>
        <item name="keyboardIcon">@drawable/twotone_keyboard_24</item>
        <item name="voicemailIcon">@drawable/ic_voicemail_24px</item>
    </style>

    <style name="AppTheme.Light" parent="BaseTheme">
        <item name="colorAccent">@color/selected_button_light</item>
        <item name="colorOnPrimary">@color/tab_text_light</item>
        <item name="colorOnSurface">@color/tab_text_light</item>
        <item name="colorPrimary">@color/active_tab_text_light</item>
        <item name="colorSecondary">@color/floating_button_light</item>
        <item name="android:colorAccent">@color/keyboard_border_light</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:colorPrimary">@color/photo_border_light</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textColorSecondary">@color/subtext_color_light</item>
        <item name="android:statusBarColor">@color/system_navbar_color_light</item>
        <item name="android:navigationBarColor">@color/system_navbar_color_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="popupColor">@color/popup_color_light</item>
    </style>

    <style name="AppTheme.Gray" parent="BaseTheme">
        <item name="colorAccent">@color/selected_button_gray</item>
        <item name="colorOnPrimary">@color/tab_text_gray</item>
        <item name="colorOnSurface">@color/tab_text_gray</item>
        <item name="colorPrimary">@color/active_tab_text_gray</item>
        <item name="colorSecondary">@color/floating_button_gray</item>
        <item name="android:colorAccent">@color/keyboard_border_gray</item>
        <item name="android:colorBackground">@color/background_gray</item>
        <item name="android:colorPrimary">@color/photo_border_gray</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:textColorSecondary">@color/subtext_color_gray</item>
        <item name="android:statusBarColor">@color/system_navbar_color_gray</item>
        <item name="android:navigationBarColor">@color/system_navbar_color_gray</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="popupColor">@color/popup_color_gray</item>
    </style>

    <style name="AppTheme.Dark" parent="BaseTheme">
        <item name="colorAccent">@color/selected_button_dark</item>
        <item name="colorOnPrimary">@color/tab_text_dark</item>
        <item name="colorOnSurface">@color/tab_text_dark</item>
        <item name="colorPrimary">@color/active_tab_text_dark</item>
        <item name="colorSecondary">@color/floating_button_dark</item>
        <item name="android:colorAccent">@color/keyboard_border_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:colorPrimary">@color/photo_border_dark</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textColorSecondary">@color/subtext_color_dark</item>
        <item name="android:statusBarColor">@color/system_navbar_color_dark</item>
        <item name="android:navigationBarColor">@color/system_navbar_color_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="popupColor">@color/popup_color_dark</item>
    </style>
</resources>