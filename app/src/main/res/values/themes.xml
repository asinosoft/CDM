<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:listViewStyle">@style/TransparentListView</item>
        <item name="android:expandableListViewStyle">@style/TransparentExpandableListView</item>
    </style>

    <style name="AppTheme.Light" parent="BaseTheme">
        <item name="colorPrimary">#6A6A6A</item>
        <item name="colorSecondary">#79b8ff</item>
        <item name="colorAccent">#5199FF</item>
        <item name="backgroundColor">#FFFFFF</item>
        <item name="android:textColor">#1F1F1F</item>
        <item name="android:textColorSecondary">#6A6A6A</item>
        <item name="android:statusBarColor">#6A6A6A</item>
        <item name="android:windowBackground">@drawable/pattern_light</item>
    </style>

    <style name="AppTheme.Gray" parent="BaseTheme">
        <item name="colorPrimary">#004156</item>
        <item name="colorSecondary">#79b8ff</item>
        <item name="colorAccent">#5199FF</item>
        <item name="backgroundColor">#303030</item>
        <item name="android:colorBackground">#303030</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textColorSecondary">#9B9B9B</item>
        <item name="android:statusBarColor">#004156</item>
        <item name="android:windowBackground">@drawable/pattern_gray</item>
    </style>

    <style name="AppTheme.Dark" parent="BaseTheme">
        <item name="colorPrimary">#004156</item>
        <item name="colorSecondary">#79b8ff</item>
        <item name="colorAccent">#5199FF</item>
        <item name="backgroundColor">#303030</item>
        <item name="android:colorBackground">#303030</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textColorSecondary">#9B9B9B</item>
        <item name="android:statusBarColor">#004156</item>
        <item name="android:windowBackground">@drawable/pattern_dark</item>
    </style>
</resources>